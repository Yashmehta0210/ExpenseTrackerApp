<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Expense Tracker Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/wwwroot/CSS/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container ">
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Expense Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
               @* @Html.ActionLink("Category","Create","Category", new { area = "" }, new { @class = "navbar-brand"})
                @Html.ActionLink("Expense", "Create", "Expense", new {area=""}, new {@class = "navbar-brand"})*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Category", "Create", "Category")</li>
                    <li>@Html.ActionLink("Expense","Create","Expense")</li>
                    <li>@Html.ActionLink("AddLimit","Create","TotalLimit")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Logout","Logout","User")</li>
                </ul>
            </div>
            
       
        </div>
    </div>
    <div class="container body-content">
        
        @RenderBody()

       <hr />

        <footer>
            <h4 class="copy">&copy; @DateTime.Now.Year - Expense Tracker Application</h4>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/moment.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/Site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

