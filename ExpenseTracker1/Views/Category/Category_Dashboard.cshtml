@model IEnumerable<ExpenseLayer.CategoryEntity>

@{
    ViewBag.Title = "Category_Dashboard";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    <link href="~/wwwroot/CSS/Site.css" rel="stylesheet" />
}

<h2 class="category">Category_Dashboard</h2>

<p class="list1">
    <a href="@Url.Action("Create","Category")" class="btn btn-default">Create New</a>
</p>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseLimit)
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseLimit)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { cid = item.Id }, new { @class = "text-success" }) |
                @* @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { cid = item.Id}, new { @class = "text-danger" },
                 new { onclick = "return confirm('Are you sure wants to delete?');" })
            </td>
        </tr>
    }

</table>
<hr class="new1" />