@model ExpenseLayer.CategoryEntity

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    <link href="~/wwwroot/CSS/Site.css" rel="stylesheet" />
}

<h2 class="category">Add Category</h2>

@using (Html.BeginForm("Create", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>CategoryEntity</h4>*@
        <hr class="new1" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2 text-dark" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpenseLimit, htmlAttributes: new { @class = "control-label col-md-2 text-dark" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExpenseLimit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExpenseLimit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Category" class="btn" />
            </div>
        </div>
    </div>
}


<p class="list1">
    <a href="@Url.Action("Category_Dashboard" ,"Category")" class="btn btn-default">Back to Category List</a>
</p>
<hr class="new1" />